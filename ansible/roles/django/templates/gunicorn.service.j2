[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/digitalocean
ExecStart=/home/ubuntu/digitalocean/env/bin/gunicorn --access-logfile - --workers 3 --bind unix:/home/ubuntu/digitalocean.sock mysite.wsgi:application

[Install]
WantedBy=multi-user.target
